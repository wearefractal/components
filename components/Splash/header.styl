@require 'nib'
@require 'jeet'

.header-component
  user-select: none
  position: relative
  width: 100%
  height: 100vh
  overflow: hidden

  .statement-container
    align()
    width: 100%
    text-align: center

    .statement-text
      font-size: 100px
      font-weight: bold
      color: #fff
      margin: 50px

      @media screen and (max-width: 750px)
        font-size: 15vw

      .statement-subtext
        font-size: 50px

        @media screen and (max-width: 750px)
          font-size: 7vw

    .login-button
      text-transform: uppercase
      font-size: 30px
      padding: 15px

      @media screen and (max-width: 750px)
        width: 80vw
        font-size: 5.5vw
        padding: 4vw

  .down-arrow
    align(horizontal)
    text-decoration: none
    bottom: 20px
    width: 60px
    height: 60px
    padding: 1px
    color: #fff
    border-radius: 100%
    background: rgba(100, 100, 100, .8)
    text-align: center
    svg
      width: 100%
      height: 110%
